{
    "name": "shetabit/chunky",
    "type": "library",
    "description": "resummable chunk upload manager",
    "keywords": [
        "upload manager",
        "upload-manager",
        "chunk upload",
        "chunk resummable upload",
        "php resume chunk upload",
        "resume upload"
    ],
    "homepage": "https://github.com/shetabit/chunky",
    "license": "MIT",
    "authors": [
        {
            "name": "Mahdi Khanzadi",
            "email": "khanzadimahdi@gmail.com",
            "homepage": "https://github.com/khanzadimahdi",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.3",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "Shetabit\\Chunky\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shetabit\\Chunky\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
